<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators</groupId>
        <artifactId>openncp-ncp-server</artifactId>
        <version>7.1.1-SNAPSHOT</version>
    </parent>

    <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators.openncp-ncp-server</groupId>
    <artifactId>openncp-ws-server</artifactId>
    <packaging>war</packaging>

    <name>OpenNCP CC Web Services (IHE XCPD, XCA, XDR)</name>

    <properties>
        <jdbc.driverClassName>com.mysql.jdbc.Driver</jdbc.driverClassName>
        <skip.deploy>true</skip.deploy>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.itextpdf</groupId>
            <artifactId>itext7-core</artifactId>
            <version>${itextpdf.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>com.thoughtworks.xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>${xstream.version}</version>
        </dependency>
        <dependency>
            <groupId>${openncp.policy-manager.groupId}</groupId>
            <artifactId>${openncp.policy-manager.artifactId}</artifactId>
            <version>${openncp.policy-manager.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>bcprov-jdk15</artifactId>
                    <groupId>org.bouncycastle</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators</groupId>
            <artifactId>openncp-integration-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators</groupId>
            <artifactId>openncp-ncp-pt-utils</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>slf4j-log4j12</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.sante.ehdsi</groupId>
            <artifactId>openncp-util</artifactId>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators.openncp-ncp-server</groupId>
            <artifactId>openncp-xca-ws-server-impl</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>log4j-over-slf4j</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>slf4j-log4j12</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>net.sf.saxon</artifactId>
                    <groupId>saxon9he</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators.openncp-ncp-server</groupId>
            <artifactId>openncp-xcpd-ws-server-impl</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>log4j</artifactId>
                    <groupId>log4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators.openncp-ncp-server</groupId>
            <artifactId>openncp-xdr-ws-server-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2-webapp</artifactId>
            <version>${axis2.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>xalan</groupId>
            <artifactId>xalan</artifactId>
            <version>${xalan.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
        </dependency>
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
        </dependency>
        <dependency>
            <groupId>org.owasp.esapi</groupId>
            <artifactId>esapi</artifactId>
            <version>${esapi.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                </exclusion>
            	<exclusion>
					<groupId>org.apache.httpcomponents</groupId>
					<artifactId>httpclient</artifactId>
				</exclusion>
            	<exclusion>
                    <groupId>org.apache.xmlgraphics</groupId>
   		 			<artifactId>batik-css</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
    		<groupId>org.apache.xmlgraphics</groupId>
   		 	<artifactId>batik-css</artifactId>
    		<version>${batik-css.version}</version>
		</dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.sante.ehdsi</groupId>
            <artifactId>openncp-abuse-detection</artifactId>
            <version>7.1.1-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>schema/*.*</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-testCompile</id>
                        <phase>test-compile</phase>
                        <configuration>
                            <testExcludes>
                                <exclude>**/*IT.java</exclude>
                            </testExcludes>
                        </configuration>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.axis2</groupId>
                <artifactId>axis2-aar-maven-plugin</artifactId>
                <version>${axis2.version}</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <id>XCPD_aar_generation</id>
                        <goals>
                            <goal>aar</goal>
                        </goals>
                        <configuration>
                            <includeDependencies>false</includeDependencies>
                            <classesDirectory>src/main/resources/aar/xcpd</classesDirectory>
                            <servicesXmlFile>src/main/resources/aar/xcpd/META-INF/services.xml</servicesXmlFile>
                            <wsdlFile>src/main/resources/aar/xcpd/META-INF/XCPD_Service.wsdl</wsdlFile>
                            <wsdlFileName>XCPD_Service.wsdl</wsdlFileName>
                            <outputDirectory>${project.basedir}/target/${project.build.finalName}/WEB-INF/services</outputDirectory>
                            <aarDirectory>target/aar/build/xcpd</aarDirectory>
                            <aarName>epsos-xcpd-service</aarName>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>prepare-package</phase>
                        <id>XCA_aar_generation</id>
                        <goals>
                            <goal>aar</goal>
                        </goals>
                        <configuration>
                            <includeDependencies>false</includeDependencies>
                            <classesDirectory>src/main/resources/aar/xca</classesDirectory>
                            <servicesXmlFile>src/main/resources/aar/xca/META-INF/services.xml</servicesXmlFile>
                            <wsdlFile>src/main/resources/aar/xca/META-INF/XCA_Service.wsdl</wsdlFile>
                            <wsdlFileName>XCA_Service.wsdl</wsdlFileName>
                            <outputDirectory>${project.basedir}/target/${project.build.finalName}/WEB-INF/services</outputDirectory>
                            <aarDirectory>target/aar/build/xca</aarDirectory>
                            <aarName>epsos-xca-service</aarName>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>prepare-package</phase>
                        <id>XDR_aar_generation</id>
                        <goals>
                            <goal>aar</goal>
                        </goals>
                        <configuration>
                            <includeDependencies>false</includeDependencies>
                            <classesDirectory>src/main/resources/aar/xdr</classesDirectory>
                            <servicesXmlFile>src/main/resources/aar/xdr/META-INF/services.xml</servicesXmlFile>
                            <wsdlFile>src/main/resources/aar/xdr/META-INF/XDR_Service.wsdl</wsdlFile>
                            <wsdlFileName>XDR_Service.wsdl</wsdlFileName>
                            <outputDirectory>${project.basedir}/target/${project.build.finalName}/WEB-INF/services</outputDirectory>
                            <aarDirectory>target/aar/build/xdr</aarDirectory>
                            <aarName>epsos-xdr-service</aarName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.3.2</version>
                <configuration>
                    <dependentWarIncludes/>
                    <dependentWarExcludes>
                        WEB-INF/lib/log4j-api-2.17.2.jar,
                        WEB-INF/lib/log4j-core-2.17.2.jar,
                        WEB-INF/lib/log4j-jcl-2.17.2.jar,
                    </dependentWarExcludes>
                    <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
                    <nonFilteredFileExtensions>
                        <nonFilteredFileExtension>aar</nonFilteredFileExtension>
                    </nonFilteredFileExtensions>
                    <webResources>
                        <resource>
                            <directory>src/main/resources/servicedata</directory>
                            <includes>
                                <include>ServiceData.xml</include>
                            </includes>
                            <targetPath>WEB-INF/services/META-INF</targetPath>
                        </resource>
                        <resource>
                            <directory>target</directory>
                            <includes>
                                <include>${project.build.finalName}.aar</include>
                            </includes>
                            <targetPath>WEB-INF/services</targetPath>
                        </resource>
                    </webResources>
                    <packagingExcludes>
                        WEB-INF/lib/checker-qual-3.8.0.jar,
                        WEB-INF/lib/commons-codec-1.11.jar,
                        WEB-INF/lib/commons-fileupload-1.4.jar,
                        WEB-INF/lib/commons-logging-1.1.1.jar,
                        WEB-INF/lib/error_prone_annotations-2.5.1.jar,
                        WEB-INF/lib/error_prone_annotations-2.7.1.jar,
                        WEB-INF/lib/guava-30.1.1-jre.jar,
                        WEB-INF/lib/guava-31.0.1-jre.jar,
                        WEB-INF,lib/HikariCP-java7-2.4.13.jar,
                        WEB-INF/lib/httpclient-4.5.13.jar,
                        WEB-INF/lib/httpcore-4.4.13.jar,
                        WEB-INF/lib/istack-commons-runtime-3.0.7.jar,
                        WEB-INF/lib/jakarta.activation-1.2.1.jar,
                        WEB-INF/lib/jakarta.activation-api-1.2.1.jar,
                        WEB-INF/lib/jaxb-runtime-2.3.1.jar,
                        WEB-INF/lib/jaxen-1.1.6.jar,
                        WEB-INF/lib/joda-time-2.10.5.jar,
                        WEB-INF/lib/neethi-3.1.1.jar,
                        WEB-INF/lib/spring-aop-5.3.9.jar,
                        WEB-INF/lib/spring-aop-5.3.20.jar,
                        WEB-INF/lib/spring-expression-5.3.9.jar,
                        WEB-INF/lib/spring-jcl-5.3.9.jar,
                        WEB-INF/lib/spring-jcl-5.3.20.jar,
                        WEB-INF/lib/txw2-2.3.1.jar,
                        WEB-INF/lib/xalan-2.7.2.jar,
                        WEB-INF/lib/xercesImpl-${xerces.version}.jar
                    </packagingExcludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>monitoring</id>
            <properties>
                <enable.monitoring.start/>
                <enable.monitoring.stop/>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>net.bull.javamelody</groupId>
                    <artifactId>javamelody-core</artifactId>
                    <version>${javamelody.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.jrobin</groupId>
                    <artifactId>jrobin</artifactId>
                    <version>1.5.9</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <!-- This profile bundles the mock National Connector implementation -->
            <id>national-connector-mock</id>
            <dependencies>
                <dependency>
                    <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators.openncp-ncp-server</groupId>
                    <artifactId>openncp-nc-mock-it</artifactId>
                    <version>${project.version}</version>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>national-build</id>
            <dependencies>
                <dependency>
                    <groupId>${openncp.national-connector.groupId}</groupId>
                    <artifactId>${openncp.national-connector.artifactId}</artifactId>
                    <version>${openncp.national-connector.version}</version>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>
        </profile>

        <!-- Integration Tests -->
        <profile>
            <id>integration-tests</id>
            <dependencies>
                <dependency>
                    <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators.openncp-ncp-server</groupId>
                    <artifactId>openncp-nc-mock-it</artifactId>
                </dependency>
                <dependency>
                    <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators.openncp-ncp-client</groupId>
                    <artifactId>openncp-xcpd-ws-client</artifactId>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators</groupId>
                    <artifactId>openncp-ncp-pt-client-consumer</artifactId>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>eu.europa.ec.sante.ehdsi.openncp-protocol-terminators</groupId>
                    <artifactId>openncp-integration-test</artifactId>
                    <scope>test</scope>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <!-- Maven compiler plugin -->
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>iTest-testCompile</id>
                                <phase>test-compile</phase>
                                <configuration>
                                    <testIncludes>
                                        <include>**/*IT*</include>
                                    </testIncludes>
                                </configuration>
                                <goals>
                                    <goal>testCompile</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- failsafe -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <encoding>${project.build.sourceEncoding}</encoding>
                        </configuration>
                        <executions>
                            <execution>
                                <id>iTest</id>
                                <goals>
                                    <goal>integration-test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>iVerify</id>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
