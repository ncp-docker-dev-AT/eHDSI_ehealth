                            <url>offline:postgresql?changeLogFile=${project.build.directory}/liquibase/databasechangelog-postgresql.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-eadc/schema-postgresql.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <!-- OpenNCP ATNA Database -->
                    <execution>
                        <id>openncp-atna-mysql</id>
                        <phase>generate-resources</phase>
                        <goals>
