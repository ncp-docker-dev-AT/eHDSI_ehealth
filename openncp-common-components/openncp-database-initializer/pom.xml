                            <url>offline:mysql?changeLogFile=${project.build.directory}/liquibase/databasechangelog-mysql.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-eadc/schema-mysql.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openncp-eadc-oracle</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
                            <changeLogFile>src/main/resources/openncp-eadc/db.changelog.xml</changeLogFile>
                            <url>offline:oracle?changeLogFile=${project.build.directory}/liquibase/databasechangelog-oracle12c.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-eadc/schema-oracle12c.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <execution>
