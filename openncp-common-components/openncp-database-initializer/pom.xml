                            <url>offline:mysql?changeLogFile=${project.build.directory}/liquibase/databasechangelog-mysql.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-atna/schema-mysql.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openncp-atna-oracle</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
