                            <url>offline:oracle?changeLogFile=${project.build.directory}/liquibase/databasechangelog-oracle12c.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-atna/schema-oracle12c.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openncp-atna-postgresql</id>
