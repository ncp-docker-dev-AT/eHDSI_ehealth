<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>eu.europa.ec.sante.ehdsi</groupId>
        <artifactId>openncp-common-components</artifactId>
        <version>5.2.6-SNAPSHOT</version>
    </parent>

    <artifactId>openncp-database-initializer</artifactId>

    <name>OpenNCP Database Initializer</name>

    <properties>
        <liquibase.version>4.10.0</liquibase.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>${liquibase.version}</version>
                <executions>
                    <!-- OpenNCP LTRDB Database -->
                    <execution>
                        <id>openncp-ltrdb-mysql</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
                            <changeLogFile>src/main/resources/openncp-ltrdb/db.changelog.xml</changeLogFile>
                            <url>offline:mysql?changeLogFile=${project.build.directory}/liquibase/databasechangelog-mysql.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-ltrdb/schema-mysql.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openncp-ltrdb-oracle</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
                            <changeLogFile>src/main/resources/openncp-ltrdb/db.changelog.xml</changeLogFile>
                            <url>offline:oracle?changeLogFile=${project.build.directory}/liquibase/databasechangelog-oracle12c.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-ltrdb/schema-oracle12c.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openncp-ltrdb-postgresql</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
                            <changeLogFile>src/main/resources/openncp-ltrdb/db.changelog.xml</changeLogFile>
                            <url>offline:postgresql?changeLogFile=${project.build.directory}/liquibase/databasechangelog-postgresql.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-ltrdb/schema-postgresql.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <!-- OpenNCP Properties Database -->
                    <execution>
                        <id>openncp-properties-mysql</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
                            <changeLogFile>src/main/resources/openncp-properties/db.changelog.xml</changeLogFile>
                            <url>offline:mysql?changeLogFile=${project.build.directory}/liquibase/databasechangelog-mysql.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-properties/schema-mysql.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openncp-properties-oracle</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
                            <changeLogFile>src/main/resources/openncp-properties/db.changelog.xml</changeLogFile>
                            <url>offline:oracle?changeLogFile=${project.build.directory}/liquibase/databasechangelog-oracle12c.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-properties/schema-oracle12c.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openncp-properties-postgresql</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
                            <changeLogFile>src/main/resources/openncp-properties/db.changelog.xml</changeLogFile>
                            <url>offline:postgresql?changeLogFile=${project.build.directory}/liquibase/databasechangelog-postgresql.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-properties/schema-postgresql.sql</migrationSqlOutputFile>
                        </configuration>
                    </execution>
                    <!-- OpenNCP EADC Database -->
                    <execution>
                        <id>openncp-eadc-mysql</id>
