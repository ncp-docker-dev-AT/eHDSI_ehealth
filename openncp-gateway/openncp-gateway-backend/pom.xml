<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>openncp-gateway</artifactId>
        <groupId>eu.europa.ec.sante.ehdsi</groupId>
        <version>5.2.5-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>openncp-gateway-backend</artifactId>
    <packaging>war</packaging>

    <properties>
        <bootstrap.version>5.1.3</bootstrap.version>
        <commons-compress.version>1.21</commons-compress.version>
        <java-jwt.version>3.18.3</java-jwt.version>
        <jaxb-runtime.version>3.0.2</jaxb-runtime.version>
        <mapstruct.version>1.4.2.Final</mapstruct.version>
        <passay.version>1.6.1</passay.version>
        <poi-ooxml.version>5.2.0</poi-ooxml.version>
        <querydsl.version>5.0.0</querydsl.version>
        <spring-boot.version>2.6.2</spring-boot.version>
        <validation-api.version>2.0.1.Final</validation-api.version>
        <xmlbean.version>5.0.3</xmlbean.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${mapstruct.version}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.3.2</version>
                <configuration>
                    <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
                    <packagingExcludes>
                        WEB-INF/lib/slf4j-simple-1.7.30.jar
                    </packagingExcludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.mysema.maven</groupId>
                <artifactId>apt-maven-plugin</artifactId>
                <version>1.1.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>process</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>target/generated-sources/java</outputDirectory>
                            <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.5.0</version>
                <executions>
                    <execution>
                        <id>xjc-smp</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <packageName>org.oasis_open.docs.bdxr.ns.smp._2016._05.ehdsi</packageName>
                            <xjbSources>
                                <xjbSource>src/main/resources/commonServiceBinding.xjb</xjbSource>
                            </xjbSources>
                            <sources>
                                <source>src/main/resources/bdx-smp-201605.xsd</source>
                            </sources>
                            <clearOutputDir>false</clearOutputDir>
                        </configuration>
                    </execution>
                    <execution>
                        <id>rfc3881</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/resources/rfc_3881.xsd</source>
                            </sources>
                            <clearOutputDir>false</clearOutputDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
